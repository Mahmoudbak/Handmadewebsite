@model List<Handmade.Models.Product>

@{
    ViewData["Title"] = "Product Management";
}

<div class="container-fluid mt-5">
    <h2 class="text-center text-light mb-4">Product Management</h2>

    <div class="text-right mb-3">
        <a asp-controller="Product" asp-action="Add" class="btn btn-dark text-white">
            ➕ Add New Product
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table table-bordered table-dark table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Address</th>
                        <th>Category ID</th>
                        <th>User ID</th>
                        <th>Supplier ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ID</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="Product Image"
                                         class="img-thumbnail" style="width: 100px; height: 100px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.Address</td>
                            <td>@product.Category_ID</td>
                            <td>@product.User_ID</td>
                            <td>@product.SupplierId</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.ID"
                                       class="btn btn-sm btn-outline-warning me-2">
                                        ✏️ Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.ID"
                                       class="btn btn-sm btn-outline-danger">
                                        🗑️ Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* لون خلفية غامق */
    }

    h2 {
        color: #f8f9fa;
    }

    .btn-dark {
        background-color: #495057;
        border-color: #495057;
    }

    .btn-outline-warning {
        color: #ffc107;
        border-color: #ffc107;
    }

    .btn-outline-danger {
        color: red;
        border-color: red;
    }

    .table img {
        border-radius: 10%;
    }
</style>
