@model List<Handmade.Models.Order>

@{
    ViewData["Title"] = "Orders List";
}

<div class="container-fluid mt-5">
    <h2 class="text-center text-light mb-4">Orders List</h2>

    <table class="table table-bordered table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>User Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center">No orders available.</td>
                </tr>
            }
            else
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.ID</td>
                        <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.User?.Name ?? "N/A"</td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.ID"
                               class="btn btn-sm btn-info">View Details</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #343a40; /* لون خلفية غامق */
    }

    h2 {
        color: #f8f9fa;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
        }
</style>
