@model Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <!-- تحسين الهيدر -->
                <div class="card-header text-center"
                     style="background: #FFC300 ">
                    <h3 class="mb-0" style="color:#3D464D !important;">Add New Product</h3>
                </div>


                <div class="card-body" style="background-color: rgba(255, 255, 255, 0.95);">
                    <form method="post" asp-action="Addnewproduct" asp-controller="Product" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold">Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="font-weight-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="font-weight-bold">Price</label>
                            <input asp-for="Price" class="form-control" step="0.01" placeholder="Enter product price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="font-weight-bold">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category_ID" class="font-weight-bold">Category</label>
                            <select asp-for="Category_ID" class="form-control" asp-items="ViewBag.Categories">
                                <option value="">-- Select a Category --</option>
                            </select>
                            <span asp-validation-for="Category_ID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="User_ID" class="font-weight-bold">User ID</label>
                            <input asp-for="User_ID" class="form-control" placeholder="Enter user ID" />
                            <span asp-validation-for="User_ID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SupplierId" class="font-weight-bold">Supplier ID (Optional)</label>
                            <input asp-for="SupplierId" class="form-control" placeholder="Enter supplier ID (optional)" />
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl" class="font-weight-bold">Product Image</label>
                            <input asp-for="ImageUrl" type="file" class="form-control-file" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- Add Category Button -->
                        <a href="@Url.Action("Add", "categorie")" class="btn btn-success btn-block mt-3" style="background: #FFC300 ;color: #3D464D !important ;">Add Category</a>
                        <button type="submit" class="btn btn-success btn-block mt-4" style="background: #FFC300 ;color: #3D464D !important;">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
   body{
        background-color: rgba(255, 255, 255, 0.9);
   }
</style>
