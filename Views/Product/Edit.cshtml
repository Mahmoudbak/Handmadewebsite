@model Handmade.Models.Product
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <!-- تحسين الهيدر -->
                <div class="card-header text-center text-white"
                     style="background: linear-gradient(135deg, #6e7f80, #a0a4a5);">
                    <h3 class="mb-0">Update Product</h3>
                </div>
                <div class="card-body" style="background-color: #f9f9f9;">
                    <form method="post" asp-action="saveaEditdep" asp-controller="Product"
                          asp-route-id="@Model.ID" enctype="multipart/form-data">

                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold">Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="font-weight-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="font-weight-bold">Price</label>
                            <input asp-for="Price" class="form-control" step="0.01" placeholder="Enter product price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="font-weight-bold">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category_ID" class="font-weight-bold">Category ID</label>
                            <input asp-for="Category_ID" class="form-control" placeholder="Enter category ID" />
                            <span asp-validation-for="Category_ID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="User_ID" class="font-weight-bold">User ID</label>
                            <input asp-for="User_ID" class="form-control" placeholder="Enter user ID" />
                            <span asp-validation-for="User_ID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SupplierId" class="font-weight-bold">Supplier ID (Optional)</label>
                            <input asp-for="SupplierId" class="form-control" placeholder="Enter supplier ID (optional)" />
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Current Image</label>
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mb-2" width="150" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl" class="font-weight-bold">Upload New Image</label>
                            <input asp-for="ImageUrl" type="file" class="form-control-file" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-block mt-4">Update Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
