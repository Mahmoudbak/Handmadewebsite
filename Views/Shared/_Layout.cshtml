<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Handmade</title>

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Handmade.styles.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <!-- Header Section -->
    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <div class="col-lg-4">
            <a href="" class="text-decoration-none">
                <span class="h1 text-uppercase text-primary bg-dark px-2">MASH</span>
                <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">ROEE</span>
            </a>
        </div>
        <div class="col-lg-4 col-6 text-right">
            <p class="m-0">Customer Service</p>
            <h5 class="m-0">+0127 331 8932</h5>
        </div>
    </div>

    <!-- Navbar -->
    <div class="col-lg-12">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
            <a href="" class="text-decoration-none d-block d-lg-none">
                <span class="h1 text-uppercase text-dark bg-light px-2">Multi</span>
                <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Home</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Add", "Product")" class="nav-item nav-link">Add Your Product</a>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <a href="@Url.Action("Index", "Dashboard")" class="nav-item nav-link">Dashboard</a>
                        <a href="@Url.Action("Addadmin", "Account")" class="nav-item nav-link">Add Admin</a>
                        <a href="@Url.Action("New", "Role")" class="nav-item nav-link">New Role</a>
                        <a href="@Url.Action("viewcate","categorie")" class="nav-item nav-link">Category</a>

                    }
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages <i class="fa fa-angle-down mt-1"></i></a>
                        <div class="dropdown-menu bg-primary rounded-0 border-0 m-0">
                            <a href="cart.html" class="dropdown-item">Shopping Cart</a>
                            <a href="checkout.html" class="dropdown-item">Checkout</a>
                        </div>
                    </div>
                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>

                <!-- Account & Profile -->
                <div class="d-inline-flex align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="text-body mr-3">Welcome, @User.Identity.Name</a>
                        <button type="button" class="btn btn-link text-body" data-toggle="modal" data-target="#profileModal" onclick="loadProfileContent()">My Profile</button>
                    }
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">My Account</button>
                        <div class="dropdown-menu dropdown-menu-right">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <button class="dropdown-item" type="button" onclick="location.href='@Url.Action("Login", "Account")'">Login</button>
                                <button class="dropdown-item" type="button" onclick="location.href='@Url.Action("Register", "Account")'">Register</button>
                            }
                            else
                            {
                                <button class="dropdown-item" type="button" onclick="location.href='@Url.Action("Logout", "Account")'">Logout</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
@*     <footer>
        <div class="container-fluid">
            <div class="row bg-secondary py-1 px-xl-5">
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="d-inline-flex align-items-center h-100">
                        <a class="text-body mr-3" href="">About</a>
                        <a class="text-body mr-3" href="">Contact</a>
                        <a class="text-body mr-3" href="">Help</a>
                        <a class="text-body mr-3" href="">FAQs</a>
                    </div>
                </div>
                <div class="d-inline-flex align-items-center d-block d-lg-none">
                    <a href="" class="btn px-0 ml-2">
                        <i class="fas fa-heart text-dark"></i>
                        <span class="badge text-dark border border-dark rounded-circle">0</span>
                    </a>
                    <a href="" class="btn px-0 ml-2">
                        <i class="fas fa-shopping-cart text-dark"></i>
                        <span class="badge text-dark border border-dark rounded-circle">0</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>
 *@
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js" asp-append-version="true"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js" asp-append-version="true"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    <script>
        function loadProfileContent() {
            $.ajax({
                url: '@Url.Action("Profile", "Account")',
                type: 'GET',
                success: function (data) {
                    $('#profileContent').html(data);
                },
                error: function () {
                    $('#profileContent').html('<p>Error loading profile data.</p>');
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
