@model Handmade.ViewModel.Profileviewmodel
@{
    Layout = null; // إلغاء التخطيط الأساسي
}
<div class="profile-container">
    <img src="@Model.imageurl" alt="Profile Picture" class="profile-image" />

    <p><strong>Username:</strong> @(Model.Username)</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Role Name:</strong> @Model.Rolename</p>
</div>
<a href="@Url.Action("EditProfile", "Account")">Edit Profile</a>

<!-- CSS لتصميم الصورة فقط -->
<style>
    .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-bottom: 15px;
    }
</style>
